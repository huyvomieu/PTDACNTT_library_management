    <style>
        .search {
            width: 800px;
            height: 60px;
            position: relative;
            margin-left: 400.6px;
            margin-top: 140px;
            z-index: 1;
            /* Chiều rộng toàn bộ ô tìm kiếm */
        }

        .search-input {
            width: 100%;
            height: 35px;
            padding: 20px 20px 15px 15px;
            /* Tạo khoảng cách cho button nằm bên trong */
            border: 1px solid black;
            border-radius: 20px;
            /* Bo tròn toàn bộ input */
            box-sizing: border-box;
        }

        .search-btn {
            position: absolute;
            right: 10px;
            /* Canh nút bấm cách viền phải của input */
            top: 35%;
            transform: translateY(-50%);
            /* Đặt nút bấm ở giữa theo chiều dọc */
            background: none;
            border: none;
            cursor: pointer;
            font-size: 17px;
        }
    </style>
    <div class="search">
        <input class="search-input" id="search-input" type="text" placeholder="Tìm kiếm tài liệu, văn bản, luận văn..."
            name="input" required><button class="search-btn">
            <span class="ti-search"></span>
        </button>
        <div id="results"></div>
    </div>
