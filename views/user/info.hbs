{{#block "styles"}}
<link rel="stylesheet" href="/client/css/styleHomePage.css">
{{/block}}
<style>
    /* Nội dung content */

    .form-container {
        width: 440px;
        margin-top: 120px;
        margin-left: auto;
        margin-right: auto;
        padding: 40px;
        border: 1px solid #ccc;
        border-radius: 10px;
        font-family: Arial, sans-serif;
    }

    .form-title {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid black;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
    }

    .form-group input[type="text"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .change-password-link {
        color: #007BFF;
        text-decoration: none;
    }

    .change-password-link:hover {
        text-decoration: underline;
    }

    .save-button {
        width: 110px;
        padding: 6px;
        background-color: blue;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        margin: 2px 174px;
    }

    .save-button:hover {
        background-color: #0056b3;
    }
</style>
<!-- content -->
<form action="/user/update/{{user._id}}?_method=PATCH" method="post">
    <div class="form-container">
        <div class="form-title">Thông tin cá nhân</div>
        <div class="form-group">
            <label for="fullname">Họ và Tên:</label>
            <input type="text" id="fullname" name="fullname" value="{{user.fullname}}" required>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu:</label>
            <a href="user/change-password" class="change-password-link">Thay đổi mật khẩu</a>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" value="{{user.email}}" required>
        </div>
        <button type="submit" class="save-button">Lưu thay đổi</button>
    </div>
</form>



{{#block "scripts"}}
<script>
    console.log('Script cho trang chủ');
</script>
<script>
    const themeToggleButton = document.querySelector('.theme-toggle');
    themeToggleButton.addEventListener('click', () => {
        document.body.classList.toggle('dark-mode');
    });
</script>
{{/block}}